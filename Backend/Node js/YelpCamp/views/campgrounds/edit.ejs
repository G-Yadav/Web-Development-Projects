<% include ../partials/header %>
<div class="container">
<h2 class="text-center m-4"><strong>Edit <%= campground.name %></strong></h2>
<form class="w-25 m-auto" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" >
    <div class="form-group">
        <input class="form-control " type="text" name="camp[name]" value="<%= campground.name %>">
    </div>
    <div class="form-group">
        <input class="form-control " type="text" name="camp[image]" value="<%= campground.image %>">
    </div>
    <div class="form-group">
        <input class="form-control " type="text" name="camp[desc]" value="<%= campground.description %>">
    </div>
    <input class="btn btn-primary w-100" type="submit" value="Submit">
</form>
</div>
<% include ../partials/footer %>